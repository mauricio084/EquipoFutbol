/* ESTILO COMPONENTE */

.contenedorComponente
    width: 80vw
    margin-left: 9vw
    height calc(100vh - 140px)
    overflow-x: hidden;
    padding: 70px 24px;
    position: relative

.contenedorComponente .agregarNuevo
    position: absolute;
    right: 64px;
    top: 75px;
    width: 210px;
    background #181441
    color #fff

.tituloSeccion 
    font-family: 'Hammersmith' !important;
    font-size: 40px
    letter-spacing: 1px
    line-height: 1;
    display: flex;
    align-items: center;
    text-transform: uppercase

.tituloSeccion i
    font-size: 40px
    padding-bottom: 4px;
    margin-right: 16px;

.tituloSeccion strong 
    margin-right 1rem

.subtituloSeccion
    font-size: 20px;
    color #181441 
    padding-left: 40px;
    margin-bottom: 16px
    line-height: 1;

.panelContenedor
    background: #fff;
    padding: 24px 48px;
    margin: 0 0 24px;
    border-radius: 12px;
    display: flex
    align-content: center
    align-items: center
    justify-content: center
    transition: ease all .3s
    scroll-behavior: smooth

.tabs
    border-radius: 0 12px 12px 12px;

.panelContenedor .formGeneral
    display: flex
    align-content: center
    align-items: center
    justify-content: center
    flex-direction: column
    width: 100%

.panelContenedor .formGeneral .contenedorInputs
    width: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-column-gap: 40px;

.rowGap16
    grid-row-gap: 16px;

.panelContenedor .formGeneral .contenedorSemana
    justify-content: flex-start;
    margin-bottom: 8px;

.panelContenedor .formGeneral .contenedorSemana .diasSemana
    justify-content: space-around;
    justify-content: space-evenly;
    width: 100%;

.panelContenedor .formGeneral .contenedorSemana label
    line-height: 1.5;
    text-align: center;

.panelContenedor .formGeneral .contenedorSemana .diasSemana .checkboxSemana
    padding-right: 5px

.panelContenedor .formGeneral .contenedorBotones
    width: 100%
    display: flex
    align-content: center
    align-items: center
    justify-content: flex-end;

.panelContenedor .formGeneral .contenedorBotones .botGeneral
    min-height: 28px;
    margin-top: 16px;
    margin-left: 16px;
    
.panelContenedor .formGeneral .contenedorBotones .botonLimpiar
    background: #fafafa
    color #181441

