@media (max-width: 1000px)
    .contenedorComponente .agregarNuevo
        position: relative;
        right: 0;
        top: 0;
        margin-left: 35px;
        margin-bottom: 16px;

    .panelContenedor .formGeneral .contenedorInputs
        grid-column-gap: 20px;

@media (max-width: 850px)
    .contenedorComponente 
        width: calc(100vw - 48px);
        margin-left: 0;
        height: calc(100vh - 220px);
        padding: 32px 24px;

@media (min-width: 850px) and (max-height: 500px)
    .contenedorComponente
        width: 100vw;
        margin-left: 0;

@media (max-width: 780px)
    .panelContenedor .formGeneral .contenedorInputs
        grid-template-columns: 1fr 1fr;
        grid-column-gap: 20px;
    
@media (max-width: 620px)
    .tituloSeccion 
        font-size: 30px

    .tituloSeccion i
        font-size: 30px
    
    .subtituloSeccion
        font-size: 16px;

    .panelContenedor .formGeneral .contenedorBotones
        flex-wrap: wrap;
    
    .panelContenedor .formGeneral .contenedorBotones .botGeneral
        width: 100%
        margin-top: 6px;
        margin-left: 0
    
@media (max-width: 540px)
    .panelContenedor .formGeneral .contenedorInputs
        grid-template-columns: 1fr !important;
        grid-gap: 0px !important;
    
    .panelContenedor .formGeneral .contenedorInputs .subContenedorInputs
        grid-template-columns: 1fr !important;
        grid-gap: 0px !important;
        grid-column: auto !important;
    
    .panelContenedor .formGeneral .contenedorInputs .subContenedorInputs .iright16
        margin: 0

    .panelContenedor .formGeneral .contenedorSemana
        margin-bottom: 20px;
        margin-top: 12px;

    .filtroDescargar
        flex-direction: column-reverse 

    .filtroDescargar .botGeneral
        width: 100%;
        margin-left: 0;

@media (max-width: 430px)
    .circuloInfo
        display: none